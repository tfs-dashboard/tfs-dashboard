<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Connect to TFS</h4>
            </div>
            <div class="modal-body">
                <p>Collection URL: <input type="text" ng-model="conUrl"></p>
                <button ng-click="connect(conUrl)">Connect</button>
                <select name="selectedCollectionName" ng-show="isUrlValid" ng-model="selectedCollectionName" ng-change="changedSelectedCollection(selectedCollectionName)">
                    <option ng-repeat="collection in collectionList" value="{{collection.Name}}">{{collection.Name}}</option>
                </select>
                <select name="selectedProjectName" ng-show="isCollectionSelected" ng-model="selectedProjectName">
                    <option ng-repeat="project in projectList" value="{{project.Name}}">{{project.Name}}</option>
                </select>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>