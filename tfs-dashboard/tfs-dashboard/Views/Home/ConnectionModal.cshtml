
<div class="modal-content" ng-init="init()">
    <div class="modal-header">
        <h4 class="modal-title">Connect to TFS</h4>
    </div>
    <div class="modal-body">
        <p>Collection URL: <input type="text" ng-model="conUrl"></p>
        <button ng-click="connect(conUrl)">Connect</button>
        <select ng-model="dashboard.selectedCollectionName" ng-disabled="!isUrlValid" ng-change="selectCollection(dashboard.selectedCollectionName)">
            <option ng-repeat="collection in collectionList" value="{{collection.Name}}">{{collection.Name}}</option>
        </select>
        <select ng-model="selectedProjectName" ng-disabled="!isCollectionSelected" ng-model="selectedProjectName" ng-change="selectProject(selectedProjectName)">
            <option ng-repeat="project in projectList" value="{{project.Name}}">{{project.Name}}</option>
        </select>
        <select ng-model="selectedQueryName" ng-disabled="!isQuerySelected" ng-model="selectedQueryName" ng-options="query for query in queriesList"></select>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-click="getWorkItems(selectedQueryName, selectedProjectName)">Save</button>
        <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
    </div>
</div>